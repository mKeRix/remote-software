{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://yio-remote.com/config.json",
    "type": "object",
    "title": "YIO Remote configuration schema",
    "default": {
        "entities": {},
        "integrations": {},
        "settings": {
            "autobrightness": true,
            "bluetootharea": false,
            "language": "en_US",
            "logging": {
                "console": true,
                "level": "DEBUG",
                "path": "/var/log/",
                "purgeHours": 72,
                "queueSize": 100,
                "showSource": true
            },
            "paired_dock": "",
            "proximity": 40,
            "shutdowntime": 7200,
            "softwareupdate": {
                "autoUpdate": false,
                "updateUrl": "https://update.yio.app/v1/",
                "updateUrlAppPath": "app/updates",
                "channel": "release",
                "checkInterval": 3600,
                "downloadDir": "/tmp/yio",
                "appUpdateScript": "/opt/yio/scripts/app-update.sh",
                "systemUpdateScript": "/opt/yio/scripts/TODO.sh"
            },
            "wifitime": 1740
        },
        "ui_config": {
            "darkmode": true,
            "groups": {},
            "pages": {},
            "profiles": {
                "0": {
                    "favorites": [],
                    "name": "Default",
                    "pages": []
                }
            },
            "selected_profile": "0"
        }
    },
    "required": [
        "entities",
        "integrations",
        "settings",
        "ui_config"
    ],
    "additionalProperties": true,
    "properties": {
        "entities": {
            "$id": "#/properties/entities",
            "type": "object",
            "title": "The entities schema",
            "additionalProperties": true,
            "properties": {
                "blind": {
                    "$id": "#/properties/entities/properties/blind",
                    "type": "array",
                    "title": "The blind schema",
                    "additionalItems": true,
                    "items": {
                        "$id": "#/properties/entities/properties/blind/items",
                        "anyOf": [
                            {
                                "$id": "#/properties/entities/properties/blind/items/anyOf/0",
                                "type": "object",
                                "title": "The first anyOf schema",
                                "required": [
                                    "entity_id",
                                    "friendly_name",
                                    "integration",
                                    "supported_features"
                                ],
                                "additionalProperties": true,
                                "properties": {
                                    "entity_id": {
                                        "$id": "#/properties/entities/properties/blind/items/anyOf/0/properties/entity_id",
                                        "type": "string",
                                        "title": "The entity_id schema",
                                        "examples": [
                                            "cover.living_room_blinds_level"
                                        ],
                                        "pattern": "^(.*)$"
                                    },
                                    "friendly_name": {
                                        "$id": "#/properties/entities/properties/blind/items/anyOf/0/properties/friendly_name",
                                        "type": "string",
                                        "title": "The friendly_name schema",
                                        "examples": [
                                            "Living room blinds"
                                        ]
                                    },
                                    "integration": {
                                        "$id": "#/properties/entities/properties/blind/items/anyOf/0/properties/integration",
                                        "type": "string",
                                        "title": "The integration schema",
                                        "examples": [
                                            "homeassistant"
                                        ]
                                    },
                                    "supported_features": {
                                        "$id": "#/properties/entities/properties/blind/items/anyOf/0/properties/supported_features",
                                        "type": "array",
                                        "title": "The supported_features schema",
                                        "examples": [
                                            [
                                                "OPEN",
                                                "CLOSE"
                                            ]
                                        ]
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        "integrations": {
            "$id": "#/properties/integrations",
            "type": "object",
            "title": "The integrations schema",
            "additionalProperties": true,
            "properties": {
                "homeassistant": {
                    "$id": "#/properties/integrations/properties/homeassistant",
                    "type": "object",
                    "title": "The homeassistant schema",
                    "required": [
                        "data"
                    ],
                    "additionalProperties": true,
                    "properties": {
                        "data": {
                            "$id": "#/properties/integrations/properties/homeassistant/properties/data",
                            "type": "array",
                            "title": "The data schema",
                            "examples": [
                                [
                                    {
                                        "data": {
                                            "ip": "192.168.1.2:8123",
                                            "token": ""
                                        },
                                        "friendly_name": "Home Assistant",
                                        "id": "homeassistant"
                                    }
                                ]
                            ],
                            "additionalItems": true,
                            "items": {
                                "$id": "#/properties/integrations/properties/homeassistant/properties/data/items",
                                "anyOf": [
                                    {
                                        "$id": "#/properties/integrations/properties/homeassistant/properties/data/items/anyOf/0",
                                        "type": "object",
                                        "title": "The first anyOf schema",
                                        "required": [
                                            "data",
                                            "friendly_name",
                                            "id"
                                        ],
                                        "additionalProperties": true,
                                        "properties": {
                                            "data": {
                                                "$id": "#/properties/integrations/properties/homeassistant/properties/data/items/anyOf/0/properties/data",
                                                "type": "object",
                                                "title": "The data schema",
                                                "examples": [
                                                    {
                                                        "ip": "192.168.1.2:8123",
                                                        "token": ""
                                                    }
                                                ],
                                                "required": [
                                                    "ip"
                                                ],
                                                "additionalProperties": true,
                                                "properties": {
                                                    "ip": {
                                                        "$id": "#/properties/integrations/properties/homeassistant/properties/data/items/anyOf/0/properties/data/properties/ip",
                                                        "type": "string",
                                                        "title": "The ip schema",
                                                        "examples": [
                                                            "192.168.1.2:8123"
                                                        ]
                                                    },
                                                    "token": {
                                                        "$id": "#/properties/integrations/properties/homeassistant/properties/data/items/anyOf/0/properties/data/properties/token",
                                                        "type": "string",
                                                        "title": "The token schema"
                                                    }
                                                }
                                            },
                                            "friendly_name": {
                                                "$id": "#/properties/integrations/properties/homeassistant/properties/data/items/anyOf/0/properties/friendly_name",
                                                "type": "string",
                                                "title": "The friendly_name schema",
                                                "examples": [
                                                    "Home Assistant"
                                                ]
                                            },
                                            "id": {
                                                "$id": "#/properties/integrations/properties/homeassistant/properties/data/items/anyOf/0/properties/id",
                                                "type": "string",
                                                "title": "The id schema",
                                                "examples": [
                                                    "homeassistant"
                                                ]
                                            }
                                        }
                                    }
                                ]
                            }
                        }
                    }
                }
            }
        },
        "settings": {
            "$id": "#/properties/settings",
            "type": "object",
            "title": "The settings schema",
            "required": [
                "autobrightness",
                "bluetootharea",
                "language",
                "logging",
                "paired_dock",
                "proximity",
                "shutdowntime",
                "softwareupdate",
                "wifitime"
            ],
            "additionalProperties": true,
            "properties": {
                "autobrightness": {
                    "$id": "#/properties/settings/properties/autobrightness",
                    "type": "boolean",
                    "title": "The autobrightness schema",
                    "default": false
                },
                "bluetootharea": {
                    "$id": "#/properties/settings/properties/bluetootharea",
                    "type": "boolean",
                    "title": "The bluetootharea schema",
                    "default": false
                },
                "language": {
                    "$id": "#/properties/settings/properties/language",
                    "type": "string",
                    "title": "The language schema",
                    "default": "en_US",
                    "examples": [
                        "en_US"
                    ]
                },
                "logging": {
                    "$id": "#/properties/settings/properties/logging",
                    "type": "object",
                    "title": "The logging schema",
                    "required": [
                        "console",
                        "level",
                        "path",
                        "purgeHours",
                        "queueSize",
                        "showSource"
                    ],
                    "additionalProperties": true,
                    "properties": {
                        "console": {
                            "$id": "#/properties/settings/properties/logging/properties/console",
                            "type": "boolean",
                            "title": "The console schema",
                            "default": false
                        },
                        "level": {
                            "$id": "#/properties/settings/properties/logging/properties/level",
                            "type": "string",
                            "title": "The level schema",
                            "examples": [
                                "DEBUG", "INFO"
                            ]
                        },
                        "path": {
                            "$id": "#/properties/settings/properties/logging/properties/path",
                            "type": "string",
                            "title": "The path schema",
                            "default": "/var/log/"
                        },
                        "purgeHours": {
                            "$id": "#/properties/settings/properties/logging/properties/purgeHours",
                            "type": "integer",
                            "title": "The purgeHours schema",
                            "default": 0,
                            "examples": [
                                72
                            ]
                        },
                        "queueSize": {
                            "$id": "#/properties/settings/properties/logging/properties/queueSize",
                            "type": "integer",
                            "title": "The queueSize schema",
                            "default": 0,
                            "examples": [
                                100
                            ]
                        },
                        "showSource": {
                            "$id": "#/properties/settings/properties/logging/properties/showSource",
                            "type": "boolean",
                            "title": "The showSource schema",
                            "default": false
                        }
                    }
                },
                "paired_dock": {
                    "$id": "#/properties/settings/properties/paired_dock",
                    "type": "string",
                    "title": "The paired_dock schema",
                    "default": "",
                    "examples": [
                        "YIO-Dock-20AEA4D73C34"
                    ]
                },
                "proximity": {
                    "$id": "#/properties/settings/properties/proximity",
                    "type": "integer",
                    "title": "The proximity schema",
                    "default": 0,
                    "examples": [
                        40
                    ]
                },
                "shutdowntime": {
                    "$id": "#/properties/settings/properties/shutdowntime",
                    "type": "integer",
                    "title": "The shutdowntime schema",
                    "default": 0,
                    "examples": [
                        7200
                    ]
                },
                "softwareupdate": {
                    "$id": "#/properties/settings/properties/softwareupdate",
                    "type": "object",
                    "title": "The softwareupdate schema",
                    "required": [
                        "autoUpdate",
                        "updateUrl",
                        "updateUrlAppPath",
                        "channel",
                        "checkInterval",
                        "downloadDir",
                        "appUpdateScript",
                        "systemUpdateScript"
                    ],
                    "additionalProperties": true,
                    "properties": {
                        "autoUpdate": {
                            "$id": "#/properties/settings/properties/softwareupdate/properties/autoUpdate",
                            "type": "boolean",
                            "title": "The autoUpdate schema",
                            "default": false
                        },
                        "updateUrl": {
                            "$id": "#/properties/settings/properties/softwareupdate/properties/updateUrl",
                            "type": "string",
                            "title": "The updateUrl schema",
                            "default": "https://update.yio.app/v1/"
                        },
                        "updateUrlAppPath": {
                            "$id": "#/properties/settings/properties/softwareupdate/properties/updateUrlAppPath",
                            "type": "string",
                            "title": "The updateUrlAppPath schema"
                        },
                        "channel": {
                            "$id": "#/properties/settings/properties/softwareupdate/properties/channel",
                            "type": "string",
                            "title": "The channel schema"
                        },
                        "checkInterval": {
                            "$id": "#/properties/settings/properties/softwareupdate/properties/checkInterval",
                            "type": "integer",
                            "title": "The checkInterval schema",
                            "default": 0,
                            "examples": [
                                3600
                            ]
                        },
                        "downloadDir": {
                            "$id": "#/properties/settings/properties/softwareupdate/properties/downloadDir",
                            "type": "string",
                            "title": "The downloadDir schema",
                            "default": "/tmp/yio"
                        },
                        "appUpdateScript": {
                            "$id": "#/properties/settings/properties/softwareupdate/properties/appUpdateScript",
                            "type": "string",
                            "title": "The appUpdateScript schema"
                        },
                        "systemUpdateScript": {
                            "$id": "#/properties/settings/properties/softwareupdate/properties/systemUpdateScript",
                            "type": "string",
                            "title": "The systemUpdateScript schema"
                        }
                    }
                },
                "wifitime": {
                    "$id": "#/properties/settings/properties/wifitime",
                    "type": "integer",
                    "title": "The wifitime schema",
                    "default": 0,
                    "examples": [
                        1740
                    ]
                }
            }
        },
        "ui_config": {
            "$id": "#/properties/ui_config",
            "type": "object",
            "title": "The ui_config schema",
            "default": {
                "darkmode": true,
                "groups": {},
                "pages": {},
                "profiles": {
                    "0": {
                        "favorites": [],
                        "name": "Default",
                        "pages": []
                    }
                },
                "selected_profile": "0"
            },
            "required": [
                "darkmode",
                "groups",
                "pages",
                "profiles",
                "selected_profile"
            ],
            "additionalProperties": true,
            "properties": {
                "darkmode": {
                    "$id": "#/properties/ui_config/properties/darkmode",
                    "type": "boolean",
                    "title": "The darkmode schema",
                    "default": false
                },
                "groups": {
                    "$id": "#/properties/ui_config/properties/groups",
                    "type": "object",
                    "title": "The groups schema",
                    "required": [],
                    "additionalProperties": true,
                    "properties": {}
                },
                "pages": {
                    "$id": "#/properties/ui_config/properties/pages",
                    "type": "object",
                    "title": "The pages schema",
                    "required": [],
                    "additionalProperties": true,
                    "properties": {}
                },
                "profiles": {
                    "$id": "#/properties/ui_config/properties/profiles",
                    "type": "object",
                    "title": "The profiles schema",
                    "required": [],
                    "additionalProperties": true,
                    "properties": {
                        "0": {
                            "$id": "#/properties/ui_config/properties/profiles/properties/0",
                            "type": "object",
                            "title": "The 0 schema",
                            "required": [
                                "favorites",
                                "name",
                                "pages"
                            ],
                            "additionalProperties": true,
                            "properties": {
                                "favorites": {
                                    "$id": "#/properties/ui_config/properties/profiles/properties/0/properties/favorites",
                                    "type": "array",
                                    "title": "The favorites schema",
                                    "additionalItems": true,
                                    "items": {
                                        "anyOf": [],
                                        "$id": "#/properties/ui_config/properties/profiles/properties/0/properties/favorites/items"
                                    }
                                },
                                "name": {
                                    "$id": "#/properties/ui_config/properties/profiles/properties/0/properties/name",
                                    "type": "string",
                                    "title": "The name schema"
                                },
                                "pages": {
                                    "$id": "#/properties/ui_config/properties/profiles/properties/0/properties/pages",
                                    "type": "array",
                                    "title": "The pages schema",
                                    "additionalItems": true,
                                    "items": {
                                        "anyOf": [],
                                        "$id": "#/properties/ui_config/properties/profiles/properties/0/properties/pages/items"
                                    }
                                }
                            }
                        }
                    }
                },
                "selected_profile": {
                    "$id": "#/properties/ui_config/properties/selected_profile",
                    "type": "string",
                    "title": "The selected_profile schema"
                }
            }
        }
    }
}